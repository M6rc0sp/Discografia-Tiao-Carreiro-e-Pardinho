APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack

DB_CONNECTION=sqlite
# Banco de dados — usamos SQLite por padrão no scaffold
# O caminho é relativo ao diretório `backend/` do projeto
DB_DATABASE=database/database.sqlite

# Configurações de email (exemplo local)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="${APP_NAME}"

# CORS / Sanctum (exemplos)
# SANCTUM_STATEFUL_DOMAINS: para autenticação via cookie (SPA), informe o host do frontend
# Ex: SANCTUM_STATEFUL_DOMAINS=localhost:5173
SANCTUM_STATEFUL_DOMAINS=localhost:5173

# FRONTEND URL (usado para documentação local)
FRONTEND_URL=http://localhost:5173

# Chave de aplicativo será gerada com `php artisan key:generate`

# Conta padrão criada pelo seeder (pode ser alterada)
DEFAULT_ADMIN_NAME="Test User"
DEFAULT_ADMIN_EMAIL=test@example.com
DEFAULT_ADMIN_PASSWORD=password
